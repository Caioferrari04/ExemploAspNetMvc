@model UserRequest;
@{
    ViewData["Title"] = "Form Page";
}

<div class="d-flex justify-content-center">
    <div class="text-center w-25">
        <h1 class="display-4">Form</h1>
        <form asp-action="TesteForm">
            <div class="form-group my-4">
                <label asp-for="Nome" class="label">Nome</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group my-4">
                <label asp-for="Email" class="label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Hello</button>
        </form>
    </div>
</div>
